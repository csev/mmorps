# Aggressive caching for static assets
# Cache all static files for 2 weeks with ETag support

<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/png "access plus 2 weeks"
    ExpiresByType image/jpeg "access plus 2 weeks"
    ExpiresByType image/gif "access plus 2 weeks"
    ExpiresByType image/svg+xml "access plus 2 weeks"
    ExpiresByType image/x-icon "access plus 2 weeks"
    ExpiresByType image/webp "access plus 2 weeks"
    
    # CSS
    ExpiresByType text/css "access plus 2 weeks"
    
    # JavaScript
    ExpiresByType application/javascript "access plus 2 weeks"
    ExpiresByType text/javascript "access plus 2 weeks"
    
    # Fonts
    ExpiresByType font/woff "access plus 2 weeks"
    ExpiresByType font/woff2 "access plus 2 weeks"
    ExpiresByType application/font-woff "access plus 2 weeks"
    ExpiresByType application/font-woff2 "access plus 2 weeks"
    ExpiresByType font/ttf "access plus 2 weeks"
    ExpiresByType application/font-ttf "access plus 2 weeks"
    ExpiresByType font/otf "access plus 2 weeks"
    ExpiresByType application/font-otf "access plus 2 weeks"
    ExpiresByType font/eot "access plus 2 weeks"
    ExpiresByType application/vnd.ms-fontobject "access plus 2 weeks"
    
    # Web manifests
    ExpiresByType application/manifest+json "access plus 2 weeks"
    ExpiresByType application/json "access plus 2 weeks"
</IfModule>

# Enable ETags for cache validation
<IfModule mod_headers.c>
    # Set cache control headers (2 weeks = 1209600 seconds)
    <FilesMatch "\.(css|js|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|otf|eot|webp|json|webmanifest)$">
        Header set Cache-Control "public, max-age=1209600"
    </FilesMatch>
    
    # Enable ETags
    FileETag MTime Size
</IfModule>

# Compress text files
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css
    AddOutputFilterByType DEFLATE application/javascript application/json
    AddOutputFilterByType DEFLATE application/xml application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml application/atom+xml
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>
